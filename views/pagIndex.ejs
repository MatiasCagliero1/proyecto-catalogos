<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
    <%-include("./partials/head") %>
        <title>Supermercado</title>

</head>

<body>
    <!-- Header -->
    <% if(usuarioLogueado != null){ %>
        <%-include("./partials/headerLogueado") %>

            <% } else { %>
                <%-include("./partials/headerDeslogueado")%>
                    <%}%>

                        <!-- /Header -->

                        <!-- Banner -->
                        <div class="banner">

                        </div>
                        <!-- /Banner -->

                        <!-- Novedades -->
                        <div class="container products-wrapper">
                            <div class="row">
                                <div class="col-12">
                                    <h2 class="products-title">Mas Vendidos</h2>
                                </div>
                                <!-- Show the "ultimos" products -->
                                <% for(let i = 0; i < productosArray.length; i++){ %>
                                    <div class="col-12 col-sm-6 col-lg-3">
                                        <section class="product-box">

                                            <a href="/productos/detalle/<%= productosArray[i].id %>">
                                                <figure class="product-box_image">
                                                    <img src="images/products/<%=productosArray[i].imagenSrc%> " alt="<%=productosArray[i].nombre%>">
                                                </figure>
                                                <article class="product-box_data">
                                                    <h2>
                                                        <%=productosArray[i].nombre %>
                                                    </h2>
                                                    <p>Precio: $
                                                        <%=productosArray[i].preciopor %>
                                                    </p>

                                                </article>
                                            </a>

                                        </section>
                                    </div>
                                    <% } %>


                            </div>
                        </div>
                        <!-- /Novedades -->

                        <!-- Ofertas -->
                        <div class="container products-wrapper">
                            <div class="row">
                                <div class="col-12">
                                    <h2 class="products-title">Oferta 2x1</h2>
                                </div>
                                <!-- Show the "ultimos" products -->
                                <% for(let i = 0; i < productosArrayOfertas.length; i++){ %>
                                    <div class="col-12 col-sm-6 col-lg-3">
                                        <section class="product-box">

                                            <a href="/productos/detalle/<%=productosArrayOfertas[i].id %>">
                                                <figure class="product-box_image">
                                                    <img src="images/products/<%=productosArrayOfertas[i].imagenSrc%> " alt="cafetera moulinex">
                                                </figure>
                                                <article class="product-box_data">
                                                    <h2>
                                                        <%=productosArrayOfertas[i].nombre %>
                                                    </h2>
                                                    <p>Precio: $
                                                        <%=productosArrayOfertas[i].preciopor %>
                                                    </p>

                                                </article>
                                            </a>

                                        </section>
                                    </div>
                                    <% } %>




                                        <!-- /footer -->
                                        <%-include("./partials/footer") %>
</body>

</html>