<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link width="" rel="shortcut icon" href="./images/logo-mercado-liebre.jpg" />

    <title> Mercado Liebre Argentina</title>
    <!-- Font Awesome Stylesheet -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
    <!-- Bootstrap Grid Stylesheet -->
    <link rel="stylesheet" href="stylesheets/bootstrap-grid.min.css">
    <!-- Own Stylesheet -->
    <link rel="stylesheet" href="stylesheets/app.css">
</head>

<body>

    <%-include("./partials/headerCompleto")%>

        <!-- Datos del usuario -->
        <section class="info-usuario container products-wrapper">
            <div class="row">
                <div class="img-container offset-3 col-2">
                    <img src="https://us.123rf.com/450wm/thesomeday123/thesomeday1231712/thesomeday123171200009/91087331-icono-de-perfil-de-avatar-predeterminado-para-hombre-marcador-de-posici%C3%B3n-de-foto-gris-vector-de-ilustr.jpg?ver=6" alt="foto de perfil" class="foto-perfil">
                </div>
                <div class="data-container col-6">
                    <div class="d-flex align-items-center ">
                        <h1 class="main-title">Santiago Karagozian
                            <a href="/users/profile/edit">
                                <i class="fas fa-cog"></i>
                            </a>
                        </h1>
                        <a class="btn mt-3 ml-4" href="">SEGUIR</a>
                    </div>
                    <div>
                        <ul class="">
                            <li>8 productos</li>
                            <li>200 seguidores</li>
                            <li>300 comentarios</li>
                        </ul>
                    </div>
                </div>
            </div>
        </section>
        <!-- /Datos del usuario -->

        <!-- Mis productos -->
        <div class="container products-wrapper">
            <div class="row">
                <div class="col-12">
                    <h2 class="products-title">Mis productos</h2>
                </div>
                <!-- Show mis productos -->
                <% for(let i = 0; i < productos.productos.length; i++){ %>
                    <div class="col-12 col-sm-6 col-lg-3">
                        <section class="product-box">

                            <a href="/productos/detalle:<%= productos.productos[i].id %>">
                                <figure class="product-box_image">
                                    <img src="/images/products/<%=productos.productos[i].imagenSrc%> " alt="<%=productos.productos[i].nombre%>">
                                </figure>
                                <article class="product-box_data">
                                    <h2>
                                        <%=productos.productos[i].nombre %>
                                    </h2>
                                    <p>Precio: $
                                        <%=productos.productos[i].preciopor %>
                                    </p>

                                </article>
                            </a>

                        </section>
                    </div>
                    <% } %>



                        <!-- /Mis productos -->


                        <!-- footer -->
                        <%-include("./partials/footer") %>
                            <!-- /footer -->
</body>

</html>